<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dp_16"
    android:paddingTop="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_10"
    android:background="@color/clRed"
    android:gravity="center_vertical"
    tools:context=".main.MainActivity">

    <ImageView
        android:src="@drawable/ic_icon_bs"
        android:tint="@color/clWhite"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40" />

    <TextView
        android:id="@+id/tv_electric"
        tools:text="剩余电量：100%"
        android:textColor="@color/clWhite"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_mac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/clWhite"
            android:textSize="@dimen/sp_16"
            tools:text="08:7C:16:18" />

        <TextView
            android:id="@+id/tv_rri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/clWhite"
            tools:text="信号强度" />
    </LinearLayout>

</LinearLayout>